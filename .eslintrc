{
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module"
  },
  "env": {
    "es6": true
  },
  "extends": ["eslint:recommended", "plugin:prettier/recommended"],
  "rules": {
    "func-names": "off",
    "no-param-reassign": "warn",
    "no-restricted-syntax": ["error", "ArrayPattern"],
    "global-require": "warn",
    "sort-keys": "error",
    "no-continue": "off",
    "no-labels": "off",
    "no-label-var": "off",
    "no-void": "off",
    "no-undefined": "error",
    "prettier/prettier": "error"
  },
  "overrides": [
    {
      "files": ["src/__tests__/**/*.mjs"],
      "extends": ["plugin:chai-expect/recommended"],
      "env": {
        "mocha": true,
        "node": true
      },
      "globals": {
        "expect": true
      },
      "plugins": ["chai-expect", "chai-friendly"],
      "rules": {
        "no-unused-expressions": 0,
        "chai-friendly/no-unused-expressions": 2
      }
    }
  ]
}
